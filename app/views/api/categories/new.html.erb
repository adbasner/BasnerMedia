<h1>Create new category</h1>
<%= render 'admin/shared/errors', obj: @category %>
<%= form_for(@category, :url => '/api/categories') do |form| %>

  <div>
    <%= form.label :name %>
  </div>
  <div>
    <%= form.text_field :name, placeholder: 'Enter a category' %>
  </div>

  <div>
    <%= form.submit :class => 'btn btn-primary' %>
  </div>
<% end %>